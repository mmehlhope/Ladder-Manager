= form_for(@ladder) do |f|
  - if @ladder.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@ladder.errors.count, "error")
        prohibited this ladder from being saved:
      %ul
        - @ladder.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :name, :class => "form-control", :placeholder => "Ladder name"
    = f.submit :class => "btn btn-primary"
