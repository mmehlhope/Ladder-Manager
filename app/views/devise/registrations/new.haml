- content_for(:title, "Create an account")
- content_for(:description, "Create a Ladder Manager account")

= form_tag registration_path(resource_name), :class => "full-width" do
  = resource_error_messages
  = render "includes/message"

  %h2 Create your account
  %div.form-group
    %input(type="text" name="user[name]" autofocus="true" placeholder="Full name" required="required")

  %div.form-group
    %input(type="email" name="user[email]" autofocus="true" placeholder="Email address" required="required")

  %div.form-group
    %input(type="password" name="user[password]" placeholder="Password" required="required")

  %div.form-group
    %input(type="password" name="user[password_confirmation]" placeholder="Confirm password" required="required")

  %button.btn.btn-primary.btn-block(type="submit") Sign up!
