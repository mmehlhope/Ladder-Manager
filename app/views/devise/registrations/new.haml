- content_for(:title, "Create an account")
- content_for(:description, "Create a Ladder Manager account")

= form_tag registration_path(resource_name), :class => "full-width" do
  = devise_error_messages!

  %div.form-group
    %label(for="email") Email
    %input(type="email" name="user[email]" autofocus="true" placeholder="Your email address" required="required")

  %div.form-group
    %label(for="user[password]") Password
    %input(type="password" name="user[password]" placeholder="8+ Character password" required="required")

  %div.form-group
    %label(for="user[password_confirmation]") Confirm Password
    %input(type="password" name="user[password_confirmation]" placeholder="Confirm password" required="required")

  %button.btn.btn-primary(type="submit") Sign up
  %a.btn(href="#{root_path}" title="Cancel") Cancel
