- content_for(:title, "Create an account")
- content_for(:description, "Create a Ladder Manager account")

%h2 Sign up

= form_tag registration_path(resource_name), :class =>"paneled full-width" do
  = devise_error_messages!

  %div.form-group
    %label(for="email") Email
    %input(type="email" name="user[email]" autofocus="true" placeholder="you@address.com")

  %div.form-group
    %label(for="user[password]") Password
    %input(type="password" name="user[password]" placeholder="8+ character password")

  %div.form-group
    %label(for="user[password_confirmation]") Confirm Password
    %input(type="password" name="user[password_confirmation]" placeholder="confirm password")

  %div.form-group
    %label(for="organization_name") Organization name
    %input(type="text" name="organization_name" placeholder="My business name")
  %button(type="submit") Sign up

= render "devise/shared/links"
