<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "full-width" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email address" %>
  </div>

  <div><%= f.submit "Resend unlock instructions", class: "btn btn-primary btn-block" %></div>
<% end %>