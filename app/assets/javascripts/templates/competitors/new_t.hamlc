%form.success-bg(action="#{@url}" method="POST")
  .list-item-content
    %input.input-small(type="text" name="competitor[name]" placeholder="New competitor name")
  .list-item-actions
    .btn-group
      %button.btn.btn-small.btn-success(type="submit" value="Create" title="Create new competitor")
        Create
      %button.btn.btn-small(data-action="cancel" title="Cancel")
        %span.glyphicon.glyphicon-remove
  .messaging
