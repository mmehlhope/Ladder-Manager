.list-item-content
  .name= @user.getFullName()
  %dl
    %dt Email:
    %dd= @user.get('email')

    %dt Activated:
    %dd= @user.get('isActivatedFriendly')

    %dt Last login:
    %dd= @user.get('last_sign_in')

.list-item-actions
  .btn-group
    %a.btn.btn-small(href="/users/#{@user.get('id')}/edit" title="Edit user" data-action="edit") Edit
    %a.btn.btn-danger.btn-small(href="/users/#{@user.get('id')}" data-action="delete")
      %span.glyphicon.glyphicon-remove
.messaging